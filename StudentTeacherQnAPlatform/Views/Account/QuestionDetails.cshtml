@model StudentTeacherQnAPlatform.ViewModels.QuestionDetailsViewModel

<h2>@Model.Title</h2>

<p>@Model.Content</p>
<p>
    <strong>Asked by:</strong> @Model.UserName on @Model.CreatedDate
</p>

<h3>Answers</h3>

@if (Model.Answers != null && Model.Answers.Any())
{
    <ul>
        @foreach (var answer in Model.Answers)
        {
            <li>
                <strong>@answer.TeacherName:</strong> @answer.Content
                <p><small>Posted on @answer.CreatedDate</small></p>
            </li>
        }
    </ul>
}
else
{
    <p>No answers yet. Be the first to answer!</p>
}

<h4>Your Answer</h4>
<form id="answer-form">
    <input type="hidden" name="questionId" value="@Model.Id" />
    <div class="form-group">
        <label for="Content">Answer</label>
        <textarea id="Content" name="content" class="form-control" rows="6" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Answer</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#answer-form').on('submit', function (e) {
                e.preventDefault();
                postAnswer();
            });
        });

        function postAnswer() {
            var questionId = $('input[name="questionId"]').val();
            var content = $('#Content').val();

            $.ajax({
                url: '@Url.Action("SubmitAnswer", "Account")',
                type: 'POST',
                data: { questionId: questionId, content: content },
                success: function (response) {
                    $('#Content').val('');
                    if (response && response.teacherName && response.answerContent && response.createdDate) {
                        var answerHtml = `<li><strong>${response.teacherName}:</strong> ${response.answerContent}
                                <p><small>Posted on ${response.createdDate}</small></p></li>`;
                        $('ul').append(answerHtml);
                    }
                },
                error: function (error) {
                    console.error('Error posting answer:', error);
                }
            });
        }
    </script>
}

