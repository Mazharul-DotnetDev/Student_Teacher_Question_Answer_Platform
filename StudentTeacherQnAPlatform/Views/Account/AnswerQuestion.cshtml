@model StudentTeacherQnAPlatform.ViewModels.AnswerQuestionViewModel

<h2>Answer Question: @Model.Title</h2>

<form id="answer-form">
    <input type="hidden" name="questionId" value="@Model.QuestionId" />
    <div class="form-group">
        <label for="Content">Your Answer</label>
        <textarea id="Content" name="Content" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Answer</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#answer-form').on('submit', function (e) {
                e.preventDefault();
                postAnswer();
            });
        });

        function postAnswer() {
            var questionId = $('input[name="questionId"]').val();
            var content = $('#Content').val();

            $.ajax({
                url: '@Url.Action("SubmitAnswer", "Account")',
                type: 'POST',
                data: { questionId: questionId, content: content },
                success: function () {
                    alert('Answer submitted successfully!');
                    window.location.href = '@Url.Action("TeacherDashboard", "Account")';
                },
                error: function (error) {
                    console.error('Error posting answer:', error);
                }
            });
        }
    </script>
}