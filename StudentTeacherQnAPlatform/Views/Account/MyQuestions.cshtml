@model List<StudentTeacherQnAPlatform.ViewModels.UserQuestionViewModel>

@{
    ViewData["Title"] = "My Questions";
}

<h2>My Questions</h2>

<ul>
    @foreach (var question in Model)
    {
        <li>
            <strong>@question.Title</strong> - @question.Content
            <p><small>Posted on @question.CreatedDate</small></p>
            <a href="@Url.Action("ViewAnswers", "Account", new { id = question.Id })">View Answers</a>
        </li>
    }
</ul>
